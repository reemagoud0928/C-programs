#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int l,b;
    scanf("%d%d",&l,&b);
    int r1=2*(l+b);
    printf("%d\n",r1);
    int r2=l*b;
    printf("%d\n",r2);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
