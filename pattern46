#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
        int n,i,j;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=0;j<=i-1;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    int s=(int)n/3;
    for(i=1;i<=n-1;i++)
    {
        for(j=1;j<=s;j++)
        {
            printf("* ");
        }
        printf("\n");
    }

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
