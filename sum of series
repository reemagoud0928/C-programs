#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int res=0;
    int tot=0;
    for(int i=0;i<n;i++)
    {
        res=2+(res*10);
        tot=tot+res;
        
    }
    printf("%d",tot);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
