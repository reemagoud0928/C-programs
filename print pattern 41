#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,i,j;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
      for(j=1;j<=n;j++)
      {
          if(i==j||i+j==n+1)
          {
              printf("*");
          }
          else
          {
              printf(" ");
          }
      }
        printf("\n");
    }
 
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
